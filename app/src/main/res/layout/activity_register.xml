<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/Image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/personal_info1"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textName"
            style="@style/viewCustom"
            android:layout_width="155dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/white"
            android:hint="Nombre"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/textAge"
            style="@style/viewCustom"
            android:layout_width="160dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:hint="Edad"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_info2"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textSurname"
            style="@style/viewCustom"
            android:layout_width="155dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/white"
            android:hint="Apellidos"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/textGenre"
            style="@style/viewCustom"
            android:layout_width="160dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:hint="Género"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </LinearLayout>


    <EditText
        android:id="@+id/textMedicalInfo"
        style="@style/viewCustom"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="10dp"
        android:hint="Información médica adicional"
        android:inputType="text"
        android:textSize="18sp"
        android:paddingTop="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/familyName"
        style="@style/viewCustom"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="10dp"
        android:hint="Nombre del grupo familiar"
        android:inputType="text"
        android:textSize="18sp"
        android:paddingTop="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <CheckBox
        android:id="@+id/check_admin_app"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="Soy usuario gestor de la aplicación"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/extraField"
        style="@style/viewCustom"
        android:layout_width="346dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/white"
        android:hint="Correo electrónico del usuario anciano"
        android:inputType="text"
        android:paddingTop="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/buttonSaveRegister"
        style="@style/viewCustom"
        android:background="@color/blue"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textAlignment="center"
        android:text="Guardar información"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:onClick="saveRegister" />
</LinearLayout>