<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/medium_gray">


    <LinearLayout
        android:id="@+id/personal_info1"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textName"
            style="@style/viewCustom"
            android:layout_width="356dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/white"
            android:hint="Titulo del Recordatorio"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_info2"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textSubtitle"
            style="@style/viewCustom"
            android:layout_width="358dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/white"
            android:hint="Información relevante"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_info3"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextDate"
            android:ems="10"
            style="@style/viewCustom"
            android:layout_width="358dp"
            android:layout_marginTop="0dp"
            android:hint="Introduzca Fecha"
            android:backgroundTint="@color/white"
            android:inputType="date"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:focusable="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_info4"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/spinner"
            style="@style/viewCustom"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/white"
            android:hint="Escoja el color del Recordatorio"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/buttonSaveRegister"
        style="@style/viewCustom"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:onClick="saveRegister"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="Guardar información"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>