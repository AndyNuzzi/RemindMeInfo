<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorOnSecondary">


    <LinearLayout
        android:id="@+id/personal_info1"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textTitle"
            style="@style/viewCustom"
            android:layout_width="356dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:hint="Titulo del Recordatorio"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="?attr/colorOnPrimary"
            android:textColorHint="?attr/colorOnPrimary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_info2"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textSubtitle"
            style="@style/viewCustom"
            android:layout_width="358dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:hint="Información relevante"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="?attr/colorOnPrimary"
            android:textColorHint="?attr/colorOnPrimary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_info4"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            style="@style/viewCustom"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:hint="Escoja el color del Recordatorio"
            android:paddingTop="10dp"
            android:textColor="?attr/colorOnPrimary"
            android:textColorHint="?attr/colorOnPrimary"
            android:textSize="18sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/check_admin_reminder"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="Recordatorio lleva Fecha asociada"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/editTextDate"
        android:ems="10"
        style="@style/viewCustom"
        android:layout_width="358dp"
        android:layout_marginTop="0dp"
        android:hint="Introduzca Fecha"
        android:backgroundTint="?attr/colorOnPrimary"
        android:inputType="date"
        android:paddingTop="25dp"
        android:textColor="?attr/colorOnPrimary"
        android:textColorHint="?attr/colorOnPrimary"
        android:focusable="false"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/buttonSaveReminder"
        style="@style/viewCustom"
        android:layout_height="wrap_content"
        android:background="?attr/color"
        android:onClick="saveNewRemind"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="Guardar información"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>