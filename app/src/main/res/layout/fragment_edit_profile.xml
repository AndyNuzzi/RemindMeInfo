<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.EditProfileFragment"
    android:background="@color/gray">


    <LinearLayout
        android:id="@+id/personal_info1"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:layout_marginTop="72dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149">

        <EditText
            android:id="@+id/textNameP"
            style="@style/viewCustom"
            android:layout_width="155dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/white"
            android:hint="Nombre"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/textAgeP"
            style="@style/viewCustom"
            android:layout_width="160dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:hint="Edad"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_info2"
        style="@style/viewCustom"
        android:layout_width="397dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_info1"
        app:layout_constraintVertical_bias="0.037">

        <EditText
            android:id="@+id/textSurnameP"
            style="@style/viewCustom"
            android:layout_width="155dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/white"
            android:hint="Apellidos"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/textGenreP"
            style="@style/viewCustom"
            android:layout_width="160dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:hint="Género"
            android:inputType="text"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <EditText
        android:id="@+id/textMedicalInfoP"
        style="@style/viewCustom"
        android:layout_width="386dp"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@color/white"
        android:hint="Información médica adicional"
        android:inputType="text"
        android:paddingTop="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_info2"
        app:layout_constraintVertical_bias="0.14" />

    <EditText
        android:id="@+id/familyNameP"
        style="@style/viewCustom"
        android:layout_width="375dp"
        android:layout_height="52dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="@color/white"
        android:hint="Nombre del grupo familiar"
        android:inputType="text"
        android:paddingTop="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_info2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSaveEdit"
        style="@style/viewCustom"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="112dp"
        android:background="@color/blue"
        android:onClick="saveEdit"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="Guardar información"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMedicalInfoP" />

</androidx.constraintlayout.widget.ConstraintLayout>